#:kivy 2.1.0

WindowManager:
    Plant:
    PetScreen:

<Plant>:
    name: "main"
    image: image_widget
    button: water_button
    growth: 0

    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'assets/room.webp'

    Image:
        id: image_widget
        source: 'assets/stage1.webp'
        pos: 10, -130

    Button:
        id: water_button
        size_hint: .15, .12
        pos: 135,50
        background_color: 0,0,0,0
        
        on_press: root.press()
        on_release: root.off()

        Image:
            id: image
            source: 'assets/newHydrate.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            
    Label:
        text: root.text
        color: (0,0,0,1)
        pos: -90, 270

    Image:
        id: harvest_image
        source: 'assets/pill.png'
        pos: 30, 500
        size_hint: .3, .3

    
    Button:
        id: pet_button
        size_hint: .15, .12
        pos: 250,50
        background_color: 0,0,0,0

        on_press: root.petPress()
        on_release: 
            root.petOff()
            app.root.current = "petscreen"
            root.manager.transition.direction = "left"

        Image:
            id: petButton_image
            source: 'assets/pets.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y

    
<PetScreen>:
    name: "petscreen"
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'assets/petsroom.jpeg'
